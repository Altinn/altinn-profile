meta {
  name: portal user
  type: http
  seq: 3
}

get {
  url: {{TokenGeneratorBaseUrl}}/api/GetPersonalToken?env={{Environment}}&scopes=altinn:portal/enduser&userId={{userId}}&partyId={{partyId}}&pid={{pid}}
  body: none
  auth: basic
}

params:query {
  env: {{Environment}}
  scopes: altinn:portal/enduser
  userId: {{userId}}
  partyId: {{partyId}}
  pid: {{pid}}
}

auth:basic {
  username: {{TokenGeneratorUserName}}
  password: {{TokenGeneratorPassword}}
}

script:post-response {
  
  let data = res.getBody();
  
  // Check if the response contains a valid token
  if (!data || data.trim() === '') {
    console.error('Failed to retrieve a valid token');
    return;
  }
  bru.setEnvVar("BearerToken",data);
}
